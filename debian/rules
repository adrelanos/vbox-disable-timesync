#!/usr/bin/make -f

## Copyright (C) 2012 - 2018 Patrick Schleizer <adrelanos@riseup.net>
## See the file COPYING for copying conditions.

#export DH_VERBOSE=1

%:
	dh $@

override_dh_install:
	dh_configpackage
	## Do not try to (re-)start the service after package install/upgrade,
	## because it could fail if kernel was upgraded, which would make the
	## whole postinst script fail.
	dh_installinit --no-start --onlyscripts --name virtualbox-guest-utils.anondist

override_dh_installchangelogs:
	dh_installchangelogs changelog.upstream upstream
